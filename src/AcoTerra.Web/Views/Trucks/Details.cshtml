@model AcoTerra.Web.Models.Trucks.TruckDetailsViewModel

@{
    ViewData["Title"] = "Detalle del Camión";
}
<h1>Detalles</h1>

<div class="container mt-4">
    <div class="card p-3">
        
        <div class="d-flex justify-content-between">
            <h5>Camión</h5>
            <div>
                @* <span class="badge bg-danger">Alta</span> *@
                @* <span class="badge bg-success">Generada</span> *@
                <a asp-action="Editar" class="btn btn-primary">
                    <i class="bi-pencil-fill"></i>
                </a>
                <a asp-action="Borrar" class="btn btn-danger">
                    <i class="bi-trash-fill"></i>
                </a>
            </div>
        </div>
        <hr>
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Patente</label>
                <input type="text" class="form-control" value="@Model.LicensePlate" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Marca</label>
                <input type="text" class="form-control" value="@Model.Brand" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Modelo</label>
                <input type="text" class="form-control" value="@Model.Model" disabled="">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Año de Fabricación</label>
                <input type="text" class="form-control" value="@Model.ManufacturingYear" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Numero de Chasis</label>
                <input type="text" class="form-control" value="@Model.ChassisNumber" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Numero de Motor</label>
                <input type="text" class="form-control" value="@Model.EngineNumber" disabled="">
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <h5>Información Técnica</h5>
        </div>
        <hr>
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Kilometraje</label>
                <input type="text" class="form-control" value="@Model.TechnicalInformation.CurrentMileage" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Combustible</label>
                <input type="text" class="form-control" value="@Model.TechnicalInformation.FuelType" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Consumo</label>
                <input type="text" class="form-control" value="@Model.TechnicalInformation.AverageConsumption" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Capacidad de Combustible</label>
                <input type="text" class="form-control" value="@Model.TechnicalInformation.TankSize" disabled="">
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <h5>Información Financiera</h5>
        </div>
        <hr>
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Precio de Compra</label>
                <input type="text" class="form-control" value="@Model.FinancialInformation.PurchasePrice" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Financiación</label>
                <input type="text" class="form-control" value="@Model.FinancialInformation.Financed" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Cuotas</label>
                <input type="text" class="form-control" value="@Model.FinancialInformation.Installments" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Saldo Pendiente</label>
                <input type="text" class="form-control" value="@Model.FinancialInformation.OutstandingBalance" disabled="">
            </div>
        </div>
        
        <div class="d-flex justify-content-between">
            <h5>Trailer</h5>
        </div>
        <hr>
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Patente</label>
                <input type="text" class="form-control" value="@Model.Trailer.LicensePlate" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Capacidad</label>
                <input type="text" class="form-control" value="@Model.Trailer.Capacity" disabled="">
            </div>
        </div>
        
        <div class="d-flex justify-content-between">
            <h5>Conductor</h5>
        </div>
        <hr>
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" value="@Model.Driver.Name" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">DNI</label>
                <input type="text" class="form-control" value="@Model.Driver.IdentificationNumber" disabled="">
            </div>
            <div class="col-md-4">
                <label class="form-label">Teléfono</label>
                <input type="text" class="form-control" value="@Model.Driver.PhoneNumber" disabled="">
            </div>
        </div>
    </div>

    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>